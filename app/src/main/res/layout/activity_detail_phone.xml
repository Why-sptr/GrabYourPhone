<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPhoneActivity"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagePhoneDetail"
        android:layout_width="150dp"
        android:layout_height="198dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/imgphone" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/phoneNameDetail"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPHONE 13 PRO MAX"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="28sp"
        android:layout_gravity="center" />

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spesification"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="28sp"
        android:layout_gravity="center" />




      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/poppins"
                      android:text="Release"
                      android:textStyle="bold"
                      android:textColor="@color/black"
                      android:textSize="18sp"
                      android:padding="10dp"
                      android:layout_marginLeft="10dp"/>

              </LinearLayout>


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">



                  <TextView
                      android:id="@+id/phoneReleaseDetail"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/poppins"
                      android:text="Release"
                      android:textColor="@color/black"
                      android:textSize="18sp"
                      android:padding="10dp"
                      android:layout_marginLeft="10dp"/>

                  <TextView
                      android:id="@+id/txRelease"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="77dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text=""
                      android:textColor="@color/black"
                      android:textSize="14sp" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/poppins"
                      android:text="Dimension"
                      android:textStyle="bold"
                      android:textColor="@color/black"
                      android:textSize="18sp"
                      android:padding="10dp"
                      android:layout_marginLeft="10dp"/>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


                  <TextView
                      android:id="@+id/phoneDimensionDetail"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text="Dimension"
                      android:textColor="@color/black"
                      android:textSize="18sp" />

                  <TextView
                      android:id="@+id/txDimension"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="52dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text=""
                      android:textColor="@color/black"
                      android:textSize="14sp" />

              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:textStyle="bold"
                      android:text="Os"
                      android:textColor="@color/black"
                      android:textSize="18sp" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="123dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text=""
                      android:textColor="@color/black"
                      android:textSize="14sp" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:id="@+id/phoneOsDetail"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text="Os"
                      android:textColor="@color/black"
                      android:textSize="18sp" />

                  <TextView
                      android:id="@+id/txOs"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="123dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text=""
                      android:textColor="@color/black"
                      android:textSize="14sp" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text="Storage"
                      android:textStyle="bold"
                      android:textColor="@color/black"
                      android:textSize="18sp" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="77dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text=""
                      android:textColor="@color/black"
                      android:textSize="14sp" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:id="@+id/phoneStorageDetail"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text="Storage"
                      android:textColor="@color/black"
                      android:textSize="18sp" />

                  <TextView
                      android:id="@+id/txStorage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="77dp"
                      android:fontFamily="@font/poppins"
                      android:padding="10dp"
                      android:text=""
                      android:textColor="@color/black"
                      android:textSize="14sp" />

              </LinearLayout>




          </LinearLayout>

      </ScrollView>

    </LinearLayout>

